<!DOCTYPE html>
<html lang="en">

<head>
  <title>Skills of Abhishek Singh</title>
  <link rel="stylesheet" href="/public/css/admin.css" type="text/css">
  <%- include('../templates/head'); -%>
</head>

<body onload="startTime()">
  <%- include('../templates/header'); -%>

  <div class="container-fluid">

    <div class="row mb-5 px-5">
      <div class="col-lg-5 col-12 mt-5 mx-lg-5 project-box text-center border border-5 border-primary">
        <h1 class="mt-5 display-4 fw-bold fst-italic text-decoration-underline text-white">Add New Skill</h1>
        <form class="text-white" action="/account/admin/skill" method="post">
          <div class="form-group">
            <label for="contactName" class="mt-3">Project Name</label>
            <input class="form-control" type="text" style="background:#f2a5f1" id="projectName" name="projectName" placeholder="Enter Skill Name" required>

            <label for="description" class="mt-3">Description</label>
            <textarea class="form-control" style="background:#eb264a" id="description" name="description" rows="8" cols="30" placeholder="Enter Description " required></textarea>
          </div>
          <button class="btn btn-primary mt-3 mb-3 text-center" type="submit" name="button">Submit</button>
        </form>
      </div>
      <% listofSkills.forEach(function(skill){ %>
      <div class="col-lg-5 col-12 mt-5 mx-lg-5 project-box text-center border border-5 border-success">
        <a href="/Skill/<%=skill.url%>">
          <div class="display-4 fw-bold fst-italic text-decoration-none text-decoration-underline mt-5 mx-5" style="color: #FF6161;"><%=skill.name%></div>
          <div class="fs-5 mt-5 mx-lg-5 text-white"><%=skill.description%><br /><br /></div>
          <br />
        </a>
      </div>
      <% }); %>
    </div>
  </div>

  <%- include('../templates/footer'); -%>

</body>

</html>
