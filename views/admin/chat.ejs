<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Chat summary</title>
  <%- include('../templates/head'); -%>
</head>

<body onload="startTime()">
  <div class="bg-dark">
    <%- include('../templates/header'); -%>
  </div>
  <div class="container-fluid color-combo-5">
    <br>
    <div class="container">
      <h1 class="text-center display-1 text-capitalize fw-bold fst-italic text-decoration-underline text-white">Messages received</h1>
      <div class="row mt-5 mb-5 d-flex justify-content-center text-center">
        <% listofmessages.slice().reverse().forEach(function(message){ %>
        <div class="col-md-5 mx-md-5 mt-5 box border border-5 border-success">
          <h3 class="mt-5"><%=message.email%></h3>
          <p><%=message.message%></p>
          <br />
        </div>
        <% }); %>
      </div>
    </div>
    <br>
  </div>
  <div class="bg-dark">
    <%- include('../templates/footer'); -%>
  </div>
</body>

</html>
