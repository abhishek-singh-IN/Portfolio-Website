<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <title>Blog By Abhishek Singh</title>
  <link rel="stylesheet" href="/public/css/blog.css">
  <%- include('../templates/head'); -%>
</head>

<body onload="startTime()">
  <div class="bg-dark">
    <%- include('../templates/header'); -%>
  </div>
  <div class="container-fluid designer-main-content">
    <br>
    <div class="container">
      <h1 class="mt-5 px-5 display-4 fw-bold fst-italic text-decoration-underline" style="text-align: center;">BLOG</h1>
      <div class="row mt-5 d-flex justify-content-center">
        <% posts.forEach(function(post){ %>
        <div class="col-md-6 px-5 mt-5">
          <div class="px-5 box">
            <br>
            <h1 class="mt-5 text-center"><%=post.title%></h1>
            <p class="mt-5">
              <%=post.content.substring(0,100)+" ... "%>
              <a href="/blog/posts/<%=post.title%>">Read More</a>
            </p>
            <br>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <br>
  </div>

  <div class="bg-dark">
    <%- include('../templates/footer'); -%>
  </div>

</body>

</html>
