<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Secrets</title>
  <link rel="stylesheet" href="/public/css/account.css">
  <%- include('../../templates/head'); -%>
  <link rel="stylesheet" href="/public/css/bootstrap-social.css">
</head>

<body onload="startTime()">
  <%- include('../../templates/header'); -%>

  <div class="jumbotron text-center main-content mtb-5">
    <div class="container mb-5">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">You've Discovered My Secret!</h1>

      <% usersWithSecrets.forEach(function(user){ %>
      <p class="secret-text"><%=user.secret%></p>
      <% }) %>

      <a class="btn btn-light btn-lg" href="/account/logout" role="button">Log Out</a>
      <a class="btn btn-dark btn-lg mx-5" href="/account/submit" role="button">Submit a Secret</a>
    </div>
  </div>
  <%- include('../../templates/footer'); -%>
</body>

</html>
